<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">DataTables Detail Booking</h6>
      <a href="/admin/booking" class="btn btn-sm btn-warning">Back</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="http://localhost:3000/<%= booking.payments.proofPayment %>" alt="" class="w-100 mb-3">
                <div class="d-flex justify-content-center">
                    <% if(booking.payments.status == 'Process') { %>
                      <form action="/admin/booking/<%= booking._id %>/confirmation?_method=PUT" method="POST">
                        <button type="submit" class="btn btn-success btn-sm mr-2">
                            <i class="fas fa-check"></i>
                            Confirmation
                        </button>
                    </form>
                    <form action="/admin/booking/<%= booking._id %>/reject?_method=PUT" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-times"></i>
                            Reject
                        </button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Name Member</th>
                        <th>Total</th>
                        <th>Bank From</th>
                        <th>Title</th>
                      </tr>
                    </thead>
                    <tbody>
                        <tr>
                          <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                          <td>$ <%= booking.total %></td>
                          <td><%= booking.payments.bankFrom %></td>
                          <td><%= booking.itemId.title %></td>
                        </tr>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
  </div>