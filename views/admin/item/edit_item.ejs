<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Form Item</h6>
    </div>
    <div class="card-body">
        <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Input title" value="<%= item.title %>" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" name="price" class="form-control" id="price"
                    placeholder="Input price" value="<%= item.price %>" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="city" class="form-control" id="city" placeholder="Input city" value="<%= item.city %>" required>
            </div>
            <div class="form-group">
                <label for="categoryId">Category</label>
                <select name="categoryId" class="form-control" id="categoryId" required>
                    <option value="" disabled>--Category</option>
                    <% for(let i=0; i<category.length; i++) { %>
                        <% if(item.categoryId == category[i]._id) { %>
                            <option value="<%= category[i]._id %>" selected><%= category[i].name %></option>
                        <% } else { %>
                            <option value="<%= category[i]._id %>"><%= category[i].name %></option>
                        <% } %>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" class="form-control" id="image" placeholder="Input image" multiple>
                <span>Pilih gambar untuk update image</span>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" required><%= item.description %></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/admin/item" class="btn btn-warning">Back</a>
        </form>
    </div>
</div>