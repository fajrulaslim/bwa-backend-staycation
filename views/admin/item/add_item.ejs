<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Form Add Item</h6>
    </div>
    <div class="card-body">
        <form action="/admin/item" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Input title"
                    required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" name="price" class="form-control" id="price"
                    placeholder="Input price" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="city" class="form-control" id="city" placeholder="Input city" required>
            </div>
            <div class="form-group">
                <label for="categoryId">Category</label>
                <select name="categoryId" class="form-control" id="categoryId" required>
                    <option value="" selected disabled>--Category</option>
                    <% for(let i=0; i<category.length; i++) { %>
                        <option value="<%= category[i]._id %>"><%= category[i].name %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" class="form-control" id="image" placeholder="Input image" multiple required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" required></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>