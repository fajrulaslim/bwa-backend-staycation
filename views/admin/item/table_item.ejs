<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">DataTables Item</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i<item.length; i++) { %>
              <tr>
                <td width="2%" class="text-center"><%= i+1 %></td>
                <td><%= item[i].title %></td>
                <td><%= item[i].price %></td>
                <td><%= item[i].country %></td>
                <td><%= item[i].city %></td>
                <td>
                  <form action="/admin/item/<%= item[i]._id %>?_method=DELETE" method="POST">
                    <a href="javascript:void(0)" type="button" class="btn btn-sm btn-warning btn-circle btn-update" data-id="<%= item[i]._id %>" data-title="<%= item[i].title %>" data-price="<%= item[i].price %>" data-country="<%= item[i].country %>" data-city="<%= item[i].city %>"><i class="fas fa-edit"></i></a>

                    <button type="submit" class="btn btn-sm btn-danger btn-circle"><i class="fas fa-trash"></i></button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>