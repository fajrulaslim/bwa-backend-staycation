<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Activity Item</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5">
                <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="itemId" value="<%= itemId %>">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Input name" required>
                    </div>
                    <div class="form-group">
                        <label for="type">Type</label>
                        <input type="text" name="type" class="form-control" id="type" placeholder="Input type"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" name="image" class="form-control" id="image" placeholder="Input image"
                            required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
            <div class="col-md-7">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i<activity.length; i++) { %>
                              <tr>
                                <td width="2%" class="text-center">
                                  <%= i+1 %>
                                </td>
                                <td>
                                  <%= activity[i].name %>
                                </td>
                                <td>
                                  <%= activity[i].type %>
                                </td>
                                <td><img src="http://localhost:3000/<%= activity[i].imageUrl %>" alt="" width="50"></td>
                                <td>
                                  <form action="/admin/item/<%= itemId %>/activity/<%= activity[i]._id %>?_method=DELETE" method="POST">
                                    <a href="javascript:void(0)" type="button" class="btn btn-sm btn-warning btn-circle btn-update"
                                      data-id="<%= activity[i]._id %>" data-name="<%= activity[i].name %>"
                                      data-type="<%= activity[i].type %>">
                                      <i class="fas fa-edit"></i></a>
              
                                    <button type="submit" class="btn btn-sm btn-danger btn-circle"><i
                                        class="fas fa-trash"></i></button>
                                  </form>
                                </td>
                              </tr>
                              <% } %>
                          </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>