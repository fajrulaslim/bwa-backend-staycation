<%- include('../../partials/header.ejs') %>

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../../partials/navbar.ejs') %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <%- include('../../partials/message.ejs') %>

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Item</h1>

                <% if(action=='view' ) { %>
                  <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                      <a class="nav-item nav-link active" id="nav-show-item-tab" data-toggle="tab" href="#nav-show-item"
                        role="tab" aria-controls="nav-show-item" aria-selected="true">Show Item</a>
                      <a class="nav-item nav-link" id="nav-add-item-tab" data-toggle="tab" href="#nav-add-item"
                        role="tab" aria-controls="nav-add-item" aria-selected="false">Add Item</a>
                    </div>
                  </nav>
                  <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-show-item" role="tabpanel"
                      aria-labelledby="nav-show-item-tab">
                      <%- include('table_item.ejs') %>
                    </div>
                    <div class="tab-pane fade" id="nav-add-item" role="tabpanel" aria-labelledby="nav-add-item-tab">
                      <%- include('add_item.ejs') %>
                    </div>
                  </div>
                  <% } else if(action=='show image' ) { %>
                    <nav>
                      <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-show-image-tab" data-toggle="tab" href="#nav-show-image"
                          role="tab" aria-controls="nav-show-image" aria-selected="true">Show Image</a>
                      </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                      <div class="tab-pane fade show active" id="nav-show-image" role="tabpanel"
                        aria-labelledby="nav-show-image-tab">
                        <%- include('show_image.ejs') %>
                      </div>
                    </div>
                    
                  <% } else if(action=='edit' ) { %>
                    <nav>
                      <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-edit-item-tab" data-toggle="tab" href="#nav-edit-item"
                          role="tab" aria-controls="nav-edit-item" aria-selected="true">Edit Item</a>
                      </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                      <div class="tab-pane fade show active" id="nav-edit-item" role="tabpanel"
                        aria-labelledby="nav-edit-item-tab">
                        <%- include('edit_item.ejs') %>
                      </div>
                    </div>

                    <% } %>


            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>

          <script>
            CKEDITOR.replace('description')
          </script>